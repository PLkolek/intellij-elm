<idea-plugin>
    <id>com.your.company.unique.plugin.id</id>
    <name>Plugin display name here</name>
    <version>1.0</version>
    <vendor email="support@yourcompany.com" url="http://www.yourcompany.com">YourCompany</vendor>

    <description><![CDATA[
      Enter short description for your plugin here.<br>
      <em>most HTML tags may be used</em>
    ]]></description>

    <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="141.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin inLet all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <fileTypeFactory implementation="mkolaczek.elm.boilerplate.ElmFileTypeFactory"/>
        <lang.parserDefinition language="Elm" implementationClass="mkolaczek.elm.boilerplate.ElmParserDefinition"/>
        <lang.syntaxHighlighterFactory language="Elm"
                                       implementationClass="mkolaczek.elm.features.syntaxHinglighting.ElmSyntaxHighlighterFactory"/>
        <annotator language="Elm" implementationClass="mkolaczek.elm.features.syntaxHinglighting.ElmCommentAnnotator"/>
        <completion.contributor language="Elm"
                                implementationClass="mkolaczek.elm.features.autocompletion.ElmCompletionContributor"/>
        <lang.findUsagesProvider language="Elm" implementationClass="mkolaczek.elm.features.ElmFindUsagesProvider"/>
        <lang.refactoringSupport language="Elm"
                                 implementationClass="mkolaczek.elm.features.refactoring.ElmRefactoringSupportProvider"/>
        <localInspection implementationClass="mkolaczek.elm.features.inspections.UnusedDeclarationInspection"
                         groupPath="Elm"
                         groupName="Declaration redundancy" enabledByDefault="true" level="WARNING"
                         shortName="ElmUnusedDeclaration" displayName="Unused declaration"/>
        <lang.psiStructureViewFactory language="Elm"
                                      implementationClass="mkolaczek.elm.features.structureView.ElmStructureViewBuilderFactory"/>
        <gotoClassContributor implementation="mkolaczek.elm.features.goTo.GoToClassContributor"/>
        <gotoSymbolContributor implementation="mkolaczek.elm.features.goTo.GoToSymbolContributor"/>
        <gotoSymbolContributor implementation="mkolaczek.elm.features.goTo.GoToClassContributor"/>
        <lang.documentationProvider language="Elm"
                                    implementationClass="mkolaczek.elm.features.ElmDocumentationProvider"/>
        <lang.foldingBuilder language="Elm" implementationClass="mkolaczek.elm.features.ElmFoldingBuilder"/>
        <lang.commenter language="Elm" implementationClass="mkolaczek.elm.features.ElmCommenter"/>
        <renameHandler implementation="mkolaczek.elm.features.refactoring.rename.InplaceRenameHandler"/>
        <refactoring.safeDeleteProcessor
                implementation="mkolaczek.elm.features.refactoring.safeDelete.ElmSafeDeleteDelegate"/>
        <annotator language="Elm"
                   implementationClass="mkolaczek.elm.features.inspections.UnresolvedReferenceAnnotator"/>
        <annotator language="Elm" implementationClass="mkolaczek.elm.features.syntaxHinglighting.ElmStringAnnotator"/>
        <annotator language="Elm" implementationClass="mkolaczek.elm.features.syntaxHinglighting.ElmNumberAnnotator"/>
        <additionalTextAttributes scheme="Default" file="colorSchemes/ElmDefault.xml"/>
        <additionalTextAttributes scheme="Darcula" file="colorSchemes/ElmDarcula.xml"/>
        <annotator language="Elm"
                   implementationClass="mkolaczek.elm.features.syntaxHinglighting.ElmSyntaxHighlightingAnnotator"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>

</idea-plugin>